<%- include('../includes/head.ejs') %>

  <header class="main-header">
    <%- include('../includes/navigation.ejs') %>

  </header>

  <main>
    <section class="cart">
      <h1>Cart</h1>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% cart && cart.forEach(product=> { %>
            <tr>
              <td>
                <%= product.title %>
              </td>
              <td>
                <img src=<%=product.imgURL %> alt="" class="product-item__image">
              </td>
              <td>
                <%= product.quantity %>
              </td>
              <td>
                <%= product.price%>
              </td>
              <td>
                <form action="/cart" method="POST">
                  <input type="hidden" name="productId" value="<%= product._id %>" />
                  <button type="submit" class="btn">Delete</button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </section>
    </section>

  </main>

  <%- include('../includes/end.ejs') %>